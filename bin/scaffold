#!/bin/bash

set -eou pipefail

day=${1:-}

if [ -z "${day}" ]; then
  echo "One required argument: [day]"
  exit 1
fi

mkdir -p src/day${day}
touch src/day${day}/part1.zig
touch src/day${day}/part2.zig

mkdir -p data/day${day}
echo "Replace me!" > data/day${day}/input.txt
echo "Replace me!" > data/day${day}/sample1.txt
echo "Replace me!" > data/day${day}/sample1_answer.txt

cat <<EOF > src/day${day}/part1.zig
const std = @import("std");

pub fn main() !void {
    const answer = try solve();
    std.debug.print("Day ${day} Part 1 answer: {d}\n", .{answer});
}

fn solve() !u64 {
  return 0;
}
EOF

cat <<EOF > src/day${day}/part2.zig
const std = @import("std");

pub fn main() !void {
    const answer = try solve();
    std.debug.print("Day ${day} Part 2 answer: {d}\n", .{answer});
}

fn solve() !u64 {
  return 0;
}
EOF
